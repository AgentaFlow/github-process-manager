# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_REPO_URL=https://github.com/username/repository

# Application Configuration
FLASK_SECRET_KEY=your_secret_key_here_for_sessions
FLASK_ENV=development
FLASK_DEBUG=True

# ChromaDB Configuration
CHROMA_DB_PATH=./chroma_db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# AI Model Configuration
# Temperature: 0.0-1.0 (lower=focused, higher=creative)
GEMINI_TEMPERATURE=0.7
# Max tokens for responses
GEMINI_MAX_TOKENS=2048

# System Prompt Configuration
# Available templates: default, technical, auditor, developer, analyst, educator
SYSTEM_PROMPT_TEMPLATE=default
# Optional: Set a custom system prompt (overrides template)
# CUSTOM_SYSTEM_PROMPT=You are a specialized AI assistant...
